Host *
ServerAliveInterval 10
ServerAliveCountMax 3
User <pid>

Host github.com
    IdentityFile ~/.ssh/id_rsa

# vbi servers
Host gimli
    HostName gimli.vbi.vt.edu
    IdentityFile ~/.ssh/id_rsa

Host snowmane
    HostName snowmane.vbi.vt.edu
    IdentityFile ~/.ssh/id_rsa

Host lightfoot
    HostName lightfoot.vbi.vt.edu
    IdentityFile ~/.ssh/id_rsa

# sdal data science servers
Host sdal
    HostName sdal.fivehokies.com
    IdentityFile ~/.ssh/id_rsa

Host sdal_r
    ProxyCommand ssh sdal -W 192.168.56.10:22

Host sdal_pg
    ProxyCommand ssh sdal -W 192.168.56.3:22

Host sdal_python
    ProxyCommand ssh sdal -W 192.168.56.5:22

Host sdal_r_snowmane
    ProxyCommand ssh sdal_r -W snowmane.vbi.vt.edu:22

# ssh forwarding

Host r_tunnel
    Hostname sdal.fivehokies.com
    LocalForward 8787 localhost:8787
    IdentityFile ~/.ssh/id_rsa

Host pg_tunnel
    Hostname sdal.fivehokies.com
    LocalForward 5432 localhost:5432
    IdentityFile ~/.ssh/id_rsa
